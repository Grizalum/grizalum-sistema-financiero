  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard", 
      "description": "Ver dashboard ejecutivo principal",
      "url": "/?section=dashboard",
      "icons": [
        {
          "src": "src/assets/images/shortcut-dashboard.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Flujo de Caja",
      "short_name": "Flujo",
      "description": "Gestionar flujo de caja",
      "url": "/?section=cash-flow", 
      "icons": [
        {
          "src": "src/assets/images/shortcut-cashflow.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Análisis IA",
      "short_name": "IA",
      "description": "Generar análisis con inteligencia artificial",
      "url": "/?section=ai-analysis",
      "icons": [
        {
          "src": "src/assets/images/shortcut-ai.png", 
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Reportes",
      "short_name": "Reportes",
      "description": "Exportar reportes financieros",
      "url": "/?section=reports",
      "icons": [
        {
          "src": "src/assets/images/shortcut-reports.png",
          "sizes": "96x96" 
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": [
            ".csv",
            ".xlsx", 
            ".pdf",
            "text/csv",
            "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
            "application/pdf"
          ]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+grizalum",
      "url": "/?action=%s"
    }
  ],
  
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://grizalum.github.io/grizalum-sistema-financiero/manifest.json"
    }
  ],
  
  "launch_handler": {
    "client_mode": "navigate-new"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  
  "permissions": [
    "notifications",
    "persistent-storage"
  ]
}
