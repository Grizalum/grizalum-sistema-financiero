  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Ver dashboard ejecutivo",
      "url": "/#dashboard",
      "icons": [
        {
          "src": "/src/assets/images/shortcut-dashboard.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Flujo de Caja",
      "short_name": "Cash Flow",
      "description": "Gestionar flujo de caja",
      "url": "/#cash-flow",
      "icons": [
        {
          "src": "/src/assets/images/shortcut-cashflow.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Nueva Transacción",
      "short_name": "Nueva",
      "description": "Agregar transacción rápida",
      "url": "/#cash-flow?action=new",
      "icons": [
        {
          "src": "/src/assets/images/shortcut-new.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Reportes IA",
      "short_name": "IA",
      "description": "Análisis con inteligencia artificial",
      "url": "/#reports?ai=true",
      "icons": [
        {
          "src": "/src/assets/images/shortcut-ai.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "related_applications": [],
  
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+grizalum",
      "url": "/?action=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "application/json": [".json"]
      }
    }
  ],
  
  "launch_handler": {
    "client_mode": "auto"
  },
  
  "handle_links": "preferred",
  
  "capture_links": "new-client"
}
